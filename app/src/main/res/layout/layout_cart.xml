<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tahoma"
                android:text="Cơm chiên cá mặn"
                android:textColor="@color/DoDam"
                android:textSize="@dimen/font_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txt_food_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:fontFamily="@font/tahoma"
                    android:text="96000 VND"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14" />

                <!--                <ImageView-->
                <!--                    android:layout_width="0dp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:src="@drawable/ic_baseline_clear_24" />-->


                <!--                <ImageView-->
                <!--                    android:layout_width="0dp"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:src="@drawable/ic_baseline_drag_handle_24" />-->


            </LinearLayout>

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal"-->
            <!--                android:weightSum="18">-->
            <!--                <TextView-->
            <!--                    android:id="@+id/txt_extra_price"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:textColor="@color/black"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:fontFamily="@font/tahoma"-->
            <!--                    android:text="Extra Price(VND): +96000"-->
            <!--                    android:textSize="@dimen/font_size_14" />-->

            <!--            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/img_decrease"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/xamnhat"
                    android:text="-"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_quantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/tahoma"
                    android:gravity="center_horizontal"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14" />

                <Button
                    android:id="@+id/img_increate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/xamnhat"
                    android:text="+"
                    android:textAllCaps="true"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/txt_price_new"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@color/white"
                    android:fontFamily="@font/tahoma"
                    android:gravity="right"
                    android:text="96000 VND"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/img_delete_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_remove_circle_outline_24" />

    </LinearLayout>

</androidx.cardview.widget.CardView>